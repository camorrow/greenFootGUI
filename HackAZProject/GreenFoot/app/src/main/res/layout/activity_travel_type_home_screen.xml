<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_travel_type_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E5E5FF"
    tools:context="sodanoobs.greenfoot.TravelTypeHomeScreen">

    <TextView
        android:text="What Form of Transportation did you Use?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/travelChoiceText"
        android:textColor="#009900"
        android:textSize="18sp" />

    <Button
        android:text="Walk/Bike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/walkBikeButton"
        android:layout_above="@+id/busButton"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:backgroundTint="#99FF00"
        android:onClick="toPointsScreen"/>

    <Button
        android:text="Bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/busButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:backgroundTint="#FFFF00"
        android:onClick="toPointsScreen"/>

    <Button
        android:text="Motorcycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/motorcycleButton"
        android:textColor="#000000"
        android:layout_below="@+id/busButton"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF9900"
        android:onClick="toPointsScreen"/>

    <Button
        android:text="Car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carButton"
        android:textColor="#000000"
        android:layout_below="@+id/motorcycleButton"
        android:layout_alignStart="@+id/busButton"
        android:backgroundTint="#FF5500"
        android:onClick="toCarScreen"/>

</RelativeLayout>
