<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sodanoobs.greenfoot.StartScreen"
    android:background="@drawable/bikers"
    tools:background="@drawable/bikers">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Green Foot!"
        android:id="@+id/startTitle"
        android:textColor="#009900"
        android:textSize="20sp"
        style="@android:style/Widget.TextView"
        android:fontFamily="cursive"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Start your journey while this app is running to earn points based on how energy efficient your transportation was!"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionText2"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="6dp" />

    <TextView
        android:text="Greenfoot is designed to raise your awareness about your travel-based carbon footprint. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionText1"
        android:layout_marginBottom="24dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:layout_above="@+id/descriptionText2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/startTitle" />
</RelativeLayout>
